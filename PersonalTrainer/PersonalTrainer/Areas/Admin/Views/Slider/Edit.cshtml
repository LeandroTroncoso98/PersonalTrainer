@model PersonalTrainer.Models.Slider
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Editar slider</h2>
<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row px-2 p-5 mx-2 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6 offset-2">
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Nombre" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="Estado" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Estado" class="form-check-input" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-4">
                    <label asp-for="ImagenUrl" class="form-label"></label>
                </div>
                <div class="col-8">
                    <input type="file" name="archivos" id="subidaArchivo" class="form-control" />
                    <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-3">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-success form-control"> Editar</button>
                            
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger form-control">Volver</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-4">
            <img src="@Model.ImagenUrl" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9" />
        </div>
    </div>
</form>

