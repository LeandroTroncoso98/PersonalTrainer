@model PersonalTrainer.Models.ViewModels.HomeVM
@{
    ViewData["Title"] = "Inicio";
}

<header class="bg-black ">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @{ int cont = 0;}
            @foreach (var item in Model.Slider)
            {
                var itemDinamico = cont++ == 0 ? "item active" : "item";
                <div class="carousel-item @itemDinamico">
                    <img class="d-block w-100" src="@Url.Content(item.ImagenUrl)" alt="slider">
                </div>

            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>
